{
  "manifest_version": 3,
  "name": "Binge It",
  "description": "An extension which helps you binge your favourite shows on : Netflix, Prime, Disney+ Hotstar, Youtube, Twitch",
  "permissions": ["activeTab", "storage", "background"],
  "version": "1.0",
  "action": {
    "default_popup" :"popup.html"
  },
  "content_scripts": [
    {
      "js": ["scripts/netflix.js"],
      "matches": ["https://www.netflix.com/*"]
    },
    {
      "js": ["scripts/prime.js"],
      "matches": ["https://www.primevideo.com/*"]
    },
    {
      "js": ["scripts/youtube.js"],
      "matches": ["https://www.youtube.com/*"]
    },
    {
      "js": ["scripts/disney.js"],
      "matches": ["https://www.hotstar.com/*"]
    },
    {
      "js": ["scripts/twitch.js"],
      "matches": ["https://www.twitch.tv/*"]
    }
  ]
}
